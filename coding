#convert upper to lower case
a=input("enter the value:")
c=ord(a)
if c>=65 and c<=97:
    b=c+32
    d=chr(b)
    print(d)
#convert lower to upper case
a=input("enter the value:")
b=ord(a)
if b>=97 and b<=122:
  c=b-32
  d=chr(c)
  print(d)
